{
    "app-id": "eu.nokun.MirrorHall",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "mirrorhall",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-run/pipewire-0",
        "--talk-name=org.gnome.Mutter.ScreenCast",
        "--env=GST_DEBUG=2"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name": "gst-rtsp-server",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/GStreamer/gst-rtsp-server",
                    "tag": "1.19.2"
                }
            ]
        },
        {
            "name": "mirrorhall",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/nokun/mirrorhall",
                    "tag": "0.1.1"
                }
            ]
        }
    ]
}
